    "url": "https://github.com/Magic-Mayo/scheduler/issues"
  },
  "homepage": "https://github.com/Magic-Mayo/scheduler#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.5.5",
    "mongojs": "^3.1.0",
    "mongoose": "^5.9.3",
    "nodemailer": "^6.4.4"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
